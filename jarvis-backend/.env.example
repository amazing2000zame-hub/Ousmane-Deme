# Jarvis 3.1 Backend - Environment Variables
# Copy to .env and fill in your values

# Server
PORT=4000
NODE_ENV=production

# Authentication
JWT_SECRET=change-this-to-a-random-secret
JARVIS_PASSWORD=change-this-password

# Proxmox API (create token: pveum user token add root@pam jarvis)
PVE_TOKEN_ID=root@pam!jarvis
PVE_TOKEN_SECRET=your-pve-token-secret

# Database (Docker volume path)
DB_PATH=/data/jarvis.db

# SSH (Docker volume mount path)
SSH_KEY_PATH=/app/.ssh/id_ed25519

# TLS (accept self-signed Proxmox certs)
NODE_TLS_REJECT_UNAUTHORIZED=0

# Claude AI
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Override passkey for elevated operations
JARVIS_OVERRIDE_KEY=override alpha

# Local LLM (Qwen via llama-server)
LOCAL_LLM_ENDPOINT=http://192.168.1.50:8080
LOCAL_LLM_MODEL=qwen2.5-7b-instruct-q4_k_m.gguf

# Cost tracking
DAILY_COST_LIMIT=10.0

# Memory TTL (days)
MEMORY_CONVERSATION_TTL_DAYS=7
MEMORY_EPISODIC_TTL_DAYS=30
MEMORY_CLEANUP_INTERVAL_MIN=60
MEMORY_CONTEXT_BUDGET=600
